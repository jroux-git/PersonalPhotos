@model PersonalPhotos.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<h2>ChangePassword</h2>

<h4>ChangePasswordViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePassword" method="post" asp-controller="Logins">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmailAddress" />
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                Email Address: @Model.EmailAddress
            </div>
            <div class="form-group">
                <label asp-for="Passsword" class="control-label">New Password</label>
                <input asp-for="Passsword" class="form-control" />
                <span asp-validation-for="Passsword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

