@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h2>ResetPassword</h2>
<div class="container">
    <div class="row">
        <div class="col=lg-12">
            <form method="post" asp-controller="Logins" asp-action="ResetPassword">
                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" id="email" asp-for="EmailAddress" />
                </div>
                <input type="submit" class="btn btn-default" value="Reset Password" />
            </form>
        </div>
    </div>
</div>
